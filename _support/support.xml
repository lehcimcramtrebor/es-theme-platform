Paypal theme donation
By Helmic
-->

<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

       <variables>

        <lang.pp.donation>support developers</lang.pp.donation>
        <lang.pp.donation lang="fr">soutenir les d√©veloppeurs</lang.pp.donation>

		<lang.pp.yes>yes</lang.pp.yes>
		<lang.pp.yes lang="fr">oui</lang.pp.yes>

		<lang.pp.no>no</lang.pp.no>
		<lang.pp.no lang="fr">non</lang.pp.no>

	</variables>

    <subset name="donation" displayName="${lang.pp.donation}">
		<include name="no" displayName="${lang.pp.no}"/>
        <include name="yes" displayName="${lang.pp.yes}"/>
    </subset>

    <view name="system">


		<image name="donation" extra="true" ifSubset="donation:yes">
			<linearSmooth>true</linearSmooth>
			<path ifNotArch="windows">./batocera.png</path>
			<path ifArch="windows">./retrobat.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>0.5 0.7</maxSize>
			<zIndex>30000</zIndex>
		</image>

		<image name="donationHelmic" extra="true" ifSubset="donation:yes">
			<linearSmooth>true</linearSmooth>
			<path>./creator.png</path>
			<origin>1 1</origin>
			<pos>1 0.96</pos>
			<maxSize>0.15 1</maxSize>
			<zIndex>30000</zIndex>
		</image>
  
		<image name="donationFade" extra="true" ifSubset="donation:yes">
			<path>./white.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<zIndex>9998</zIndex>
			<color>000000aa</color>
		</image>

	</view>
	
</theme>
