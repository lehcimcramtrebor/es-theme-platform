<theme>
<formatVersion>7</formatVersion>

<view name="detailed,video,grid,gamecarousel">

<image name="gamebar" extra="true">
<linearSmooth>true</linearSmooth>
<path>./../gamebar.png</path>
<origin>0.5 0</origin>
<pos>0.5 0</pos>
<zIndex>9000</zIndex>
<maxSize>1 1</maxSize>
</image>

<image name="md_hiddenExtra" extra="true">
<origin>0.5 1</origin>
<pos>0.73 0.0325</pos>
<path>./../hidden.svg</path>
<maxSize>0.02 0.03</maxSize>
<color>20202099</color>
<zIndex>9001</zIndex>
</image>

<image name="md_hidden">
<origin>0.5 1</origin>
<pos>0.73 0.0325</pos>
<path>./../hidden.svg</path>
<maxSize>0.02 0.03</maxSize>
<color>dddddd</color>
<zIndex>9001</zIndex>
</image>

<text name="md_players">
<fontPath>./../players.ttf</fontPath>
<color>dddddd</color>
<origin>0.5 1</origin>
<size>0.02 0.03</size>
<pos>0.585 0.05</pos>
<zIndex>9001</zIndex>
</text>

<image name="md_cheevosExtra" extra="true">
<origin>0.5 1</origin>
<path>./../Contest.png</path>
<pos>0.555 0.05</pos>
<maxSize>0.02 0.03</maxSize>     
<color>20202099</color>
<zIndex>9000</zIndex>
</image>
		
<image name="md_cheevos,md_notcheevos">
<origin>0.5 1</origin>
<path>./../Contest.png</path>
<pos>0.555 0.05</pos>
<maxSize>0.02 0.03</maxSize>     
<color>dddddd</color>
<zIndex>9001</zIndex>
</image>
    
<image name="md_notcheevos">
<color>606060</color>
</image> 
    
<image name="md_cheevos">
<storyboard>
<animation property="opacity" to="0" autoreverse="true" repeat="forever" duration="150" mode="Linear"/>
</storyboard>
</image> 
		
<image name="md_manual,md_nomanual">
<origin>0.5 1</origin>
<pos>0.465 0.05</pos>
<path>./../book.png</path>
<maxSize>0.02 0.03</maxSize>
<color>dddddd</color>
<zIndex>9001</zIndex>
<reflexion>0.3 0</reflexion>
</image>

<image name="md_nomanual">
<color>606060</color>
</image>

<image name="md_savestateExtra" extra="true">
<origin>0.5 1</origin>
<path>./../SaveState.png</path>
<pos>0.525 0.05</pos>
<maxSize>0.02 0.03</maxSize>
<color>20202099</color>
<zIndex>9001</zIndex>
<reflexion>0.3 0</reflexion>
</image>

<image name="md_savestate,md_nosavestate">
<origin>0.5 1</origin>
<path>./../SaveState.png</path>
<pos>0.525 0.05</pos>
<maxSize>0.02 0.03</maxSize>
<color>dddddd</color>
<zIndex>9001</zIndex>
<reflexion>0.3 0</reflexion>
</image>

    
<image name="md_nosavestate">
<color>606060</color>
</image>
	
<image name="md_kidgame, md_notkidgame"> 
<origin>0.5 1</origin>
<pos>0.495 0.05</pos>
<path>./../kid.svg</path>
<maxSize>0.02 0.03</maxSize>
<color>dddddd</color>
<zIndex>9001</zIndex>
<linearSmooth>true</linearSmooth>
<reflexion>0.3 0</reflexion>
</image>

<image name="md_notkidgame"> 
<color>606060</color>
</image>

<image name="md_flag">
<origin>0.5 1</origin>
<pos>0.425 0.05</pos>
<maxSize>0.022 0.05</maxSize>
<linearSmooth>true</linearSmooth>
<zIndex>9001</zIndex>
<reflexion>0.1 0</reflexion>
</image>

<image name="md_notkidgame,md_kidgame,md_nosavestate,md_savestate,md_savestateExtra,md_nomanual,md_manual,md_cheevos,md_notcheevos,md_cheevosExtra,md_flag" ifSubset="screen ratio:43">
<y>0.04</y>
</image>

<image name="md_hidden,md_hiddenExtra" ifSubset="screen ratio:43">
<y>0.025</y>
</image>

<text name="md_players" ifSubset="screen ratio:43">
<size>0.05 0.05</size>
<y>0.05</y>
<x>0.6</x>
</text>

<control name="md_notkidgame,md_kidgame,md_nosavestate,md_savestate,md_savestateExtra,md_nomanual,md_manual,md_cheevos,md_notcheevos,md_cheevosExtra,md_flag,md_hidden,md_hiddenExtra,md_players,gamebar">
<storyboard event="open">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
<animation property="offsetY" from="-0.3" duration="200" mode="linear"/>
<animation property="offsetY" to="-0.3" duration="200" mode="linear" begin="3000"/>
</storyboard>
<storyboard event="activateNext">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
<animation property="offsetY" to="-0.3" duration="200" mode="linear" begin="3000"/>
</storyboard>
<storyboard event="activatePrev">
<animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
<animation property="offsetY" to="-0.3" duration="200" mode="linear" begin="3000"/>
</storyboard>
<storyboard event="deactivateNext">
<animation property="opacity" to="0" duration="1" mode="easeOut"/>
</storyboard>
<storyboard event="deactivatePrev">
<animation property="opacity" to="0" duration="1" mode="easeOut"/>
</storyboard>
</control>

</view>

</theme>