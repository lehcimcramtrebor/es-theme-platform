<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>


<!---------- STORYBOARDS --------->

<!---------- SYSTEM ANIMATIONS ---------->

		<view name="system">

	<image name="frame_skin" extra="true">

		<storyboard>
        		<animation property="opacity" from="0" to="0" begin="0" duration="300" mode="linear"/> 
        		<animation property="opacity" from="0" to="1" begin="300" duration="150" mode="linear"/> 
		</storyboard>

	</image>

	<image name="frame" extra="true">

		<storyboard>
        		<animation property="opacity" from="1" to="1" begin="0" duration="300" mode="linear"/> 
        		<animation property="opacity" from="1" to="0" begin="300" duration="150" mode="linear"/> 
		</storyboard>		
	</image>
	

		</view>

		<view name="basic, detailed, video, grid, gamecarousel">


	<image name="frame" extra="true">

		<storyboard>
        		<animation property="opacity" from="0" to="0" begin="0" duration="forever" mode="linear"/> 
		</storyboard>		
	</image>
	

		</view>	
</theme>
